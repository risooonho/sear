%define name @PACKAGE@
%define version @VERSION@
%define release 1

#define a default prefix??

Summary: Sear - an 3D client for Worldforge
Name: %{name}
Version: %{version}
Release: %{release}
Source0: %{name}-%{version}.tar.gz
URL: http://www.worldforge.org/dev/eng/clients/sear/
Copyright: GPL
Group: Games
BuildRoot: /var/tmp/%{name}-buildroot
Prefix: %{_prefix}

%description
Sear is a 3D client for MMORPGs using the Worldforge system. 

written by Simon Goodall <sear@simongoodall.co.uk>


%prep
rm -rf ${RPM_BUILD_ROOT}

%setup -q 

%build
CFLAGS="$RPM_OPT_FLAGS" CXXFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}  --localstatedir=%{_localstatedir}
make

%install
rm -rf $RPM_BUILD_ROOT
make install prefix=$RPM_BUILD_ROOT/%{prefix} localstatedir=$RPM_BUILD_ROOT/%{_localstatedir}

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{prefix}/share/%{name}/*
%{prefix}/bin/*
%doc README COPYING AUTHORS


# end of file
